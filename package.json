    "devDependencies": {
        "@i-novus/license-checker": "^1.0.2",
        "copyfiles": "^2.4.1"
    },
    "engines": {
        "npm": "please-use-yarn",
        "node": ">=18"
    },
    "packageManager": "yarn@4.9.1"
}
