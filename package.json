{
    "private": true,
    "license": "Apache-2.0",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "yarn workspace @i-novus/eslint-config run build",
        "postinstall": "yarn run check:licenses&&yarn run copy:doc",
        "check:licenses": "yarn run license-checker",
        "copy:doc": "cpy README.md LICENSE ./packages/eslint-config"
    },
    "devDependencies": {
        "@i-novus/license-checker": "^1.0.1",
        "cpy-cli": "^5.0.0"
    },
    "engines": {
        "npm": "please-use-yarn",
        "node": ">=18"
    },
    "packageManager": "yarn@4.9.1"
}
