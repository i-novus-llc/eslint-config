{
    "name": "@i-novus/eslint-config",
    "version": "9.0.2-rc-3",
    "description": "Standard ESLint/style config for I-Novus",
    "author": {
        "name": "I-Novus LLC",
        "email": "n2o@i-novus.ru",
        "url": "https://i-novus.ru/"
    },
    "homepage": "https://www.npmjs.com/package/@i-novus/eslint-config",
    "repository": {
        "type": "git",
        "url": "https://github.com/i-novus-llc/eslint-config.git"
    },
    "bugs": {
        "url": "https://github.com/i-novus-llc/eslint-config/issues"
    },
    "license": "Apache-2.0",
    "keywords": [
        "eslint 9",
        "eslint",
        "stylelint",
        "eslint config",
        "stylelint config",
        "node",
        "react",
        "typescript",
        "react-typescript",
        "i-novus",
        "i-novus eslint"
    ],
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "LICENSE",
        "package.json"
    ],
    "scripts": {
        "lint:ts": "tsc",
        "build": "yarn run lint:ts&&tsup-node --dts"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.mjs",
            "default": "./dist/index.mjs"
        },
        "./styles": {
            "types": "./dist/styles.d.mjs",
            "default": "./dist/styles.mjs"
        }
    },
    "dependencies": {
        "@eslint/js": "^9.17.0",
        "eslint-import-resolver-typescript": "^3.7.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-react": "^7.37.3",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.16",
        "stylelint-config-clean-order": "^5.4.2",
        "stylelint-config-recommended-scss": "^14.0.0",
        "stylelint-config-standard": "^36.0.0",
        "typescript-eslint": "^8.18.2"
    },
    "peerDependencies": {
        "eslint": ">= 9",
        "stylelint": "*"
    },
    "devDependencies": {
        "@types/node": ">=18.14.0",
        "eslint": "^9.17.0",
        "rimraf": "5.0.5",
        "tsup": "^8.4.0",
        "typescript": "^5.7.2"
    }
}
