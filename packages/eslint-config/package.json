{
    "name": "@i-novus/eslint-config",
    "version": "9.1.3",
    "description": "Standard ESLint/style config for I-Novus",
    "author": {
        "name": "I-Novus LLC",
        "email": "n2o@i-novus.ru",
        "url": "https://i-novus.ru/"
    },
    "homepage": "https://www.npmjs.com/package/@i-novus/eslint-config",
    "repository": {
        "type": "git",
        "url": "https://github.com/i-novus-llc/eslint-config.git"
    },
    "bugs": {
        "url": "https://github.com/i-novus-llc/eslint-config/issues"
    },
    "license": "Apache-2.0",
    "keywords": [
        "eslint 9",
        "eslint",
        "stylelint",
        "eslint config",
        "stylelint config",
        "node",
        "react",
        "typescript",
        "react-typescript",
        "i-novus",
        "i-novus eslint"
    ],
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "LICENSE",
        "package.json",
        "README.md"
    ],
    "exports": {
        ".": {
            "default": "./dist/index.mjs"
        },
        "./styles": {
            "default": "./dist/styles.mjs"
        }
    },
    "scripts": {
        "build": "yarn run lint:eslint&&yarn run copy:src",
        "prepublish": "yarn run copy:doc",
        "copy:src": "cpy . ../../dist --cwd=src",
        "copy:doc": "cpy ../../LICENSE ../../README.md ./packages/eslint-config",
        "lint:eslint": "eslint src"
    },
    "dependencies": {
        "@eslint/js": "^9.26.0",
        "eslint-import-resolver-typescript": "^4.3.4",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "eslint-plugin-sonarjs": "^3.0.2",
        "globals": "^16.1.0",
        "stylelint-config-clean-order": "^7.0.0",
        "stylelint-config-recommended-scss": "^15.0.0",
        "stylelint-config-standard": "^38.0.0",
        "typescript-eslint": "^8.32.1"
    },
    "peerDependencies": {
        "eslint": ">= 9",
        "stylelint": "*"
    },
    "devDependencies": {
        "cpy-cli": "^5.0.0",
        "eslint": "^9.26.0",
        "rimraf": "^6.0.1",
        "typescript": "^5.7.2"
    }
}
